{
  "name": "wolffsoftwareengineering.nl",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:eslint": "eslint --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "lint:stylelint": "stylelint --ignore-path .gitignore '**/*.css'",
    "prepare": "husky install",
    "storybook:build": "build-storybook",
    "storybook:start": "start-storybook -p 6006 --quiet",
    "pretest:e2e": "NODE_ENV=test npm run dev & wait-on -s 1 http://localhost:3000",
    "test:e2e": "cypress open --config-file .cypress/cypress.json",
    "posttest:e2e": "kill-port 3000"
  },
  "dependencies": {
    "graphql-request": "^3.5.0",
    "next": "^11.0.1",
    "next-mdx-remote": "^3.0.4",
    "prop-types": "^15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@percy/cli": "^1.0.0-beta.60",
    "@percy/cypress": "^3.1.1",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/builder-webpack5": "^6.3.6",
    "@storybook/manager-webpack5": "^6.3.6",
    "@storybook/react": "^6.3.6",
    "@testing-library/cypress": "^8.0.0",
    "axe-core": "^4.3.2",
    "cypress": "^8.0.0",
    "cypress-axe": "^0.12.2",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sort": "^1.5.0",
    "graphql": "^15.5.1",
    "husky": "^7.0.1",
    "kill-port": "^1.6.1",
    "lint-staged": "^11.1.1",
    "msw": "^0.33.0",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "wait-on": "^6.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.{js,css,json,md,yml}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next",
      "airbnb",
      "airbnb/hooks",
      "plugin:sort/recommended",
      "plugin:cypress/recommended",
      "prettier"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "never"
      ],
      "import/no-duplicates": "error",
      "import/no-absolute-path": "error",
      "import/no-self-import": "error",
      "import/no-cycle": "error",
      "import/no-useless-path-segments": "error",
      "jsx-a11y/anchor-is-valid": "off",
      "react/jsx-handler-names": "error",
      "react/no-unused-prop-types": "error",
      "react/default-props-match-prop-types": "error",
      "react/jsx-boolean-value": "error",
      "react/no-multi-comp": "error",
      "react/jsx-no-undef": "error",
      "react/jsx-curly-brace-presence": "error",
      "react/jsx-fragments": "error",
      "react/jsx-pascal-case": "error",
      "react/jsx-no-useless-fragment": "error",
      "react/no-unstable-nested-components": "error",
      "react/destructuring-assignment": [
        "error",
        "always"
      ],
      "react/boolean-prop-naming": [
        "error",
        {
          "validateNested": true
        }
      ],
      "react/function-component-definition": [
        "error",
        {
          "namedComponents": "function-declaration"
        }
      ],
      "react/jsx-filename-extension": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-sort-props": [
        "warn",
        {
          "shorthandFirst": true,
          "callbacksLast": true
        }
      ]
    },
    "ignorePatterns": [
      "!.cypress/",
      "!.msw/",
      "!.storybook/"
    ],
    "overrides": [
      {
        "files": [
          "*.stories.js"
        ],
        "rules": {
          "react/function-component-definition": [
            "error",
            {
              "namedComponents": "arrow-function",
              "unnamedComponents": "arrow-function"
            }
          ],
          "react/no-multi-comp": "off",
          "react/jsx-props-no-spreading": "off",
          "import/no-extraneous-dependencies": "off"
        }
      },
      {
        "files": [
          ".storybook/**/*.js"
        ],
        "rules": {
          "no-param-reassign": "off",
          "import/prefer-default-export": "off"
        }
      },
      {
        "files": [
          ".msw/**/*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "import/prefer-default-export": "off",
          "global-require": "off"
        }
      },
      {
        "files": [
          ".cypress/**/*.js"
        ],
        "rules": {
          "no-unused-expressions": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-alphabetical-order": true
    }
  },
  "percy": {
    "version": 2,
    "snapshot": {
      "widths": [
        1280
      ],
      "min-height": 800
    }
  }
}
